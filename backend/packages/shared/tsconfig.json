{
  "compilerOptions": {
    /* === Project Reference Support === */
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",

    /* === Emit === */
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",

    /* === Target & Resolution === */
    "target": "ES2020",
    "module": "node16",
    "moduleResolution": "Node16",

    /* === Type Safety === */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* === Environment === */
    "lib": ["ES2020"],
    "types": []
  },

  "include": ["src"]
}
