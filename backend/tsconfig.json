{
  "compilerOptions": {
    /* === Build & Project Graph === */
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",

    /* === Target & Module === */
    "target": "ES2020",
    "module": "node16",
    "moduleResolution": "Node16",

    /* === Paths === */
    "baseUrl": ".",
    "paths": {
      "@backend/shared": ["./packages/shared/dist"]
    },

    /* === Output === */
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,

    /* === Type Safety === */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* === Interop === */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* === Environment === */
    "lib": ["ES2020"],
    "types": ["node"]
  },

  "references": [{ "path": "./packages/shared" }],  

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
